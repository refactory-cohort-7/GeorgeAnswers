doctype html
html(lang = 'en')
    head
        title=title
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width,initial-scale=1.0")

        // css for all pages.
        link(rel='stylesheet' href='/css/general.css')

        // CSS for only index.pug
        link(rel='stylesheet' href='/css/index.css')

        // Font links
        link(rel="preconnect" href="https://fonts.gstatic.com")
        link(
                href="https://fonts.googleapis.com/css2?family=Lobster&display=swap"
            rel="stylesheet"
        )
        link(
                href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap"
            rel="stylesheet"
        )
    body
        header.grid-general
            // logo
            p#logo.lobster-text
                span#comp-name Stay Clean
                span#truck
        main.grid-general.shadow-grey
            h3 Waste disposal for all time freshness.
            form.flex-general-column(action="/requests" method="POST")

                fieldset.user-name.spaceMargin.transform
                    legend.transform User Name
                    input#user-name(
                        type='text'
                        name='user-name'
                        placeholder = 'User Name'
                        )
                fieldset.password.spaceMargin.transform
                    legend.transform Password
                    input#password(
                        type='password'
                        name='user-password'
                        placeholder='Password'
                    )
                button#login-btn.spaceMargin.shadow-grey(type="submit") Sign In