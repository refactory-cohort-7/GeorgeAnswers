extend generalLayout.pug
block head
    
    link(rel='stylesheet' href='/css/registration.css')
block main
    // ACCOUNT REGISTRATION â€“ FORM
    form( action="/newStaff" method="POST" )
        section#personalInfo.grid-general
            h2 Personal Information
        
                // First name
            fieldset.first-name.transform
                legend.transform First Name
                input#first-name(
                    type="text"
                    name="firstName"
                    placeholder="First Name"
                    )
                // Last Name
            fieldset.last-name.transform
                legend.transform Last Name
                input#last-name(
                    type="text"
                    name="lastName"
                    placeholder="Last Name"
                    )

                // Date of birth
            fieldset.dob
                legend Date of Birth
                input#dob.roboto-text(
                    type='date'
                    name='dateOfBirth'
                )
                
            // Gender
            fieldset#gender
                legend Gender
                input(
                    type='radio' 
                    id='gender-male'
                    name='gender'
                    value='male'
                )
                label.gender-male(for='gender-male') Male
                input(
                    type='radio' 
                    id='gender-female'
                    name='gender'
                    value='female'
                )
                label.gender-female(for='gender-female') Female

            // National ID Number
            fieldset.nin.transform
                legend.transform Natioanl Id Number
                input#nin(
                    type='text'
                    name='nationalIdNumber'
                    placeholder='National ID Number'
                )

            // phone number
            fieldset.contact.transform
                legend.transform Phone Number
                input#contact(
                    type='phone'
                    name='phoneNumber'
                    placeholder='Phone Number'
                )

            // Place of residence
            fieldset.residence.transform
                legend.transform Place of Residence
                textarea#residence.roboto-text(placeholder='Place of Residence' name='placeOfResidence')
            
        section#empInfo
            h2 Employement Information
            // Job title
          
            label.jobTitle(for="jobTitle") Job Title:
            select#jobTitle(name='jobTitle')
                option(value='') Choose Job Title
                option(value='front-desk-officer') Front Desk Officer
                option(value='system-admin') System Admin 
                option(value='finance-officer') Finance Officer
                option(value='truck-driver') Truck Driver
                option(value='truck-conductor') Truck Conductor
            // Driving License
            fieldset.driv-lis.transform
                legend.transform Driver's License Number
                input#driv-lis(
                    type='text'
                    name='driversLisenceNumber'
                    placeholder='Driver\'s License Number'
                )
            // Salary Amount
            label.salary Salary:
            input#salary(type='text' name='salary') 

            // Type of Allowance
            label.typeOfAllowance(for='typeOfAllowance') Type of Allowance:
            select#typeOfAllowance( name='typeOfAllowance')
                option(value='') Choose   type of Allowance
                option(value='daily-allowance') Daily Allowance
                option(value='every-two days') Every 2 days. 

            // Allowance Amount
            label.allowanceAmount(for='allowanceAmount') Allowance Amount:
            input#allowanceAmount(type='text' name='allowanceAmount')
        
            // Past incidence
            label.pastIncidence(for="pastIncidence") Past Incident
            select#pastIncidence(name='pastIncident')
                option(placeholder='') Past incident
                option(value='none') None
                option(value='accident') Accident
                option(value='fight') Fight
                option(value='fuel-theft') Fuel theft
                option(value='others') Others
        button#register(type='submit') Register
        a#cancel-reg(href="/welcome") Cancel
