extend generalLayout.pug
block head
    
    link(rel='stylesheet' href='/css/newStaff.css')
block body
    body.staffBody.grid-general
        include includes/navBar
        block main
            main
                // ACCOUNT REGISTRATION â€“ FORM
                form#regNewStaff.shadow.whitebg( action="/newStaff" method="POST" )
                    h2#perInfoH.shadow.lightbg Personal Information
                    section#personalInfo.shadow.lightbg
                    
                        // First name
                        label.firstName(for='firstName') First Name
                        input#firstName(
                                type="text"
                                name="firstName"
                                
                                )

                        // Last Name
                        label.lastName(for='lastName') Last Name
                        input#lastName(
                                type="text"
                                name="lastName"
                               
                                )

                        // Date of birth
                        label.dob(for='dob') Date of Birth
                        input#dob.roboto-text(
                                type='date'
                                name='dateOfBirth'
                            )
                            
                        // Gender
                        label.gender(for='gender') Gender:
                        select#gender(name='gender')
                            option(value='Male') Male
                            option(value='Female') Female
                        
                        // National ID Number
                        label.nin(for='nin') Natioanl Id Number
                        input#nin(
                                type='text'
                                name='nationalIdNumber'
                            )

                        // phone number
                        label.contact(for="contact") Phone Number
                        input#contact(
                                type='phone'
                                name='phoneNumber'
                            )

                        // Place of residence
                        label.residence(for='residence') Place of Residence
                        textarea#residence.roboto-text
                        
                    h2#empInfoH.shadow.lightbg Employement Information
                    section#empInfo.shadow.lightbg
                        
                        // Job title
                        label.jobTitle(for="jobTitle") Job Title:
                        select#jobTitle(name='jobTitle')
                            option(value='') Choose Job Title
                            option(value='front-desk-officer') Front Desk Officer
                            option(value='system-admin') System Admin 
                            option(value='finance-officer') Finance Officer
                            option(value='truck-driver') Truck Driver
                            option(value='truck-conductor') Truck Conductor
                        // Driving License
                        label.drivLis(for='drivLis') Driver's License Number
                        input#drivLis(
                                type='text'
                                name='driversLisenceNumber'
                               
                            )
                        // Salary Amount
                        label.salary Salary:
                        input#salary(type='text' name='salary') 

                        // Type of Allowance
                        label.typeOfAllowance(for='typeOfAllowance') Type of Allowance:
                        select#typeOfAllowance( name='typeOfAllowance')
                            option(value='none') None
                            option(value='daily-allowance') Daily Allowance
                            option(value='every-two days') Every 2 days. 

                        // Allowance Amount
                        label.allowanceAmount(for='allowanceAmount') Allowance Amount:
                        input#allowanceAmount(type='text' name='allowanceAmount')
                    
                        // Past incidence
                        label.pastIncidence(for="pastIncidence") Past Incident
                        select#pastIncidence(name='pastIncident')
                            option(placeholder='') Past incident
                            option(value='none') None
                            option(value='accident') Accident
                            option(value='fight') Fight
                            option(value='fuel-theft') Fuel theft
                            option(value='others') Others
                    button#register(type='submit') Register
                    a#goBack.button.shadow(href='#') Back
            block js
                script(src='javascript/general.js')
                script(src='/javascript/registration.js')
        include includes/footer
    

